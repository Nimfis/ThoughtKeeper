<Window x:Class="ThoughtKeeper.NoteDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThoughtKeeper"
        mc:Ignorable="d"
        Title="Note Details" 
        Width="Auto"
        Height="Auto">

    <StackPanel Margin="10">
        <TextBlock Text="Title:" FontWeight="Bold"/>
        <TextBlock x:Name="titleTextBlock" Margin="5"/>

        <TextBlock Text="Content:" FontWeight="Bold"/>
        <TextBlock x:Name="contentTextBlock" Margin="5" TextWrapping="Wrap"/>

        <TextBlock Text="Date Created:" FontWeight="Bold"/>
        <TextBlock x:Name="dateCreatedTextBlock" Margin="5"/>

        <Button Content="Close" HorizontalAlignment="Right"  Click="CloseButton_Click" Width="52"/>
    </StackPanel>

</Window>