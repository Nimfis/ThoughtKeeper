<Window x:Class="ThoughtKeeper.AddEditNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThoughtKeeper"
        mc:Ignorable="d"
             Title="Add/Edit Note" Height="200" Width="400"
        ResizeMode="NoResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Title:" Grid.Row="0"/>
        <TextBox x:Name="titleTextBox" Grid.Row="0" Margin="0,20,0,10"/>

        <Label Content="Content:" Grid.Row="1"/>
        <TextBox x:Name="contentTextBox" Grid.Row="1" Margin="0,5,0,10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="saveButton" Content="Save" Margin="10" Click="SaveButton_Click"/>
            <Button x:Name="cancelButton" Content="Cancel" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid> 
       
</Window>
